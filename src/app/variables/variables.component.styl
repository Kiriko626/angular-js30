.variables-component
    text-align center
    background #193549
    color white
    font-family 'helvetica neue', sans-serif
    font-weight 100
    font-size 50px
    --base #ffc600
    --spacing 10px
    --blur 10px

    h2
        margin 0
        padding 25px

    &__title
        color var(--base)

    &__controls
        margin-bottom 50px
        display flex
        justify-content center

        input
            width 100px

        label
            padding-right 10px

@css {
    img {
        padding: var(--spacing);
        background: var(--base);
        filter: blur(var(--blur));
    }
}
