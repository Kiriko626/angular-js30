.drum-component
    background url("~src/assets/drum.jpg") no-repeat center
    background-size cover

    &__key
        &-list
            display flex
            flex-wrap wrap
            flex 1
            min-height calc(100vh - 64px)
            align-items center
            justify-content center

        &-item
            border 4px solid black
            border-radius 5px
            margin 10px
            font-size 15px
            padding 10px 5px
            transition all .07s ease
            width 9%
            max-width 80px
            text-align center
            color white
            background rgba(0, 0, 0, 0.4)
            text-shadow 0 0 5px black

            &--playing
                transform scale(1.1)
                border-color #ffc600
                box-shadow 0 0 10px #ffc600

            &-description
                font-size 12px
                text-transform uppercase
                letter-spacing 1px
                color #ffc600

    kbd
        display block
        font-size 40px

