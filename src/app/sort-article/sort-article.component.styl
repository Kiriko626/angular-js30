.sort-component
    font-family sans-serif
    background url("/assets/sort-article.jpg")
    background-size cover
    display flex
    align-items center

    a
        color #ffc600
        text-decoration none

    ul
        list-style inside square
        font-size 20px
        background white
        width 500px
        margin 60px auto
        padding 0
        box-shadow 0 0 0 20px rgba(0, 0, 0, 0.05)

        li
            border-bottom 1px solid #efefef
            padding 20px

            &:last-child
                border-bottom 0

